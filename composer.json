{
  "name": "sima-land/yii2-amqp",
  "description": "Yii2 AMQP extension (wrapper on php-amqplib).",
  "type": "yii2-extension",
  "keywords": ["yii2","extension","rabbitmq","amqp","message queue"],
  "license": "MIT",
  "authors": [
    {
      "name": "Danil Syromolotov",
      "email": "pelmennoteam@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.1",
    "ext-json": "*",
    "php-amqplib/php-amqplib": "v2.8.2-rc3",
    "yiisoft/yii2": "^2.0.15"
  },
  "require-dev": {
    "roave/security-advisories": "dev-master",
    "phpunit/phpunit": "^7.5",
    "php-coveralls/php-coveralls": "^2.1"
  },
  "suggest": {
    "ext-pcntl": "Use pcntl extension",
    "ext-posix": "Use posix extension"
  },
  "autoload": {
    "psr-4": {
      "simaland\\amqp\\": "./src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "simaland\\amqp\\tests\\": "./tests"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit --testdox --coverage-text --verbose"
  },
  "scripts-descriptions": {
    "test": "Run tests for this package"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://asset-packagist.org"
    }
  ]
}
